#!/usr/bin/env bash

# Benchmark info
echo "TIMING - Starting main script at: $(date)"

# Set working directory to home directory
cd "${HOME}"

#
# Start Jupyter Notebook Server
#

# Benchmark info
echo "TIMING - Starting jupyter at: $(date)"

# activate python venv where jupyterlab is installed
. /gpfs/bbp.cscs.ch/ssd/apps/tools/jupyter/jupyterlab/bin/activate

# enable nodejs10 (lab needs it for extenstions)
. /gpfs/bbp.cscs.ch/ssd/apps/rhscl/rh-nodejs10/enable

#
# Launch the Jupyter Notebook Server
set -x
jupyter <%= context.jupyterlab_switch == "1" ? "lab" : "notebook" %> --config="${CONFIG_FILE}"
